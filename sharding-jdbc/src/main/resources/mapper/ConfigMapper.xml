<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xff.shardingjdbc.mapper.ConfigMapper">

	<resultMap id="baseMap" type="xff.shardingjdbc.po.ConfigPo">
		<id property="id" column="id" />
		<result property="data" column="data" />
	</resultMap>

	<insert id="add" parameterType="xff.shardingjdbc.po.ConfigPo" >
		insert into t_config (
		`id`,
		`data`
		)
		values (
		#{id},
		#{data}
		)
	</insert>

	<update id="update" parameterType="xff.shardingjdbc.po.ConfigPo">
		update t_config set data='mmm' where id = #{id}
	</update>
</mapper>